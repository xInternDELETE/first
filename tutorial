let amount = 18;
const cookiePrice = 7;
const candyPrice = 8;
amount = amount - cookiePrice;
console.log ('Amount is', amount);

const hasEnoughMoney = amount >= candyPrice;
if (hasEnoughMoney) {
    console.log ('I have enough money');
} else {
    console.log ('I do not have enough money');
}


